<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EaiApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ButtonsBackground</item>
        <item name="colorPrimaryVariant">@color/ButtonBarFocus</item>
        <item name="colorOnPrimary">@color/ShadowInputFocus</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/InputColor</item>
        <item name="colorSecondaryVariant">@color/BottomBar</item>
        <item name="colorOnSecondary">@color/ButtonBarFocus</item>
    </style>

    <style name="Theme.EaiApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EaiApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EaiApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>